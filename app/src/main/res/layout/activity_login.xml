<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.LoginActivity">

    <ImageView
        android:id="@+id/imgViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="false"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151"
        app:srcCompat="@drawable/mercadoapp" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#00BCD4"
        android:breakStrategy="high_quality"
        android:ems="10"
        android:hint="E-mail..."
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textColor="#091260"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewLogo" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00BCD4"
        android:breakStrategy="high_quality"
        android:ems="10"
        android:hint="Senha..."
        android:inputType="numberPassword"
        android:textColor="#091260"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#091260"
        android:text="LOGIN..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSenha"
        app:rippleColor="#CACACA" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#091260" />

        <Switch
            android:id="@+id/SwitchLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:shadowColor="#000000"
            android:textAlignment="viewEnd"
            android:textColorHighlight="#091260"
            android:textColorLink="#091260"
            android:thumbTint="#091260"
            android:trackTint="#3041B1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:textColor="#091260" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>